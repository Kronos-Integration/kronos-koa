{
  "name": "kronos-koa",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/kronos-koa.js",
  "module": "src/kronos-koa.js",
  "description": "Koa modifications needed by Kronos",
  "keywords": [],
  "contributors": [
    {
      "name": "Torsten Link",
      "email": "torstenlink@gmx.de"
    },
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 --temp-directory build/coverage ava && c8 report -r lcov --temp-directory build/coverage",
    "test": "ava",
    "semantic-release": "semantic-release",
    "posttest": "npm run prepare && markdown-doctest",
    "docs": "documentation readme src/kronos-koa.js --section=API",
    "prepare": "rollup -c",
    "lint": "documentation lint src/kronos-koa.js",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "koa": "^2.5.2",
    "koa-compose": "^4.0.0",
    "koa-is-json": "^1.0.0",
    "on-finished": "^2.3.0",
    "statuses": "^1.3.1"
  },
  "devDependencies": {
    "ava": "^1.0.0-rc.2",
    "documentation": "^9.0.0",
    "got": "^9.2.2",
    "koa-route": "^3.2.0",
    "markdown-doctest": "^0.9.1",
    "rollup": "^0.67.4",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-executable": "^1.3.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "semantic-release": "^15.12.5",
    "travis-deploy-once": "^5.0.9",
    "rollup-plugin-json": "^3.1.0",
    "c8": "^3.2.1",
    "esm": "^3.0.84"
  },
  "engines": {
    "node": ">=10.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/kronos-koa.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/kronos-koa/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/kronos-koa#readme",
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
