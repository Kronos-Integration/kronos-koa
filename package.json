{
  "name": "kronos-koa",
  "version": "0.0.0-semantic-release",
  "main": "dist/kronos-koa.js",
  "module": "src/kronos-koa.js",
  "description": "Koa modifications needed by Kronos",
  "keywords": [],
  "contributors": [
    {
      "name": "Torsten Link",
      "email": "torstenlink@gmx.de"
    },
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "nyc --temp-directory build/nyc ava",
    "test": "ava",
    "semantic-release": "semantic-release",
    "precover": "rollup -c tests/rollup.config.js",
    "pretest": "rollup -c tests/rollup.config.js",
    "posttest": "npm run prepare && markdown-doctest",
    "docs": "documentation readme src/kronos-koa.js --section=API",
    "prepare": "rollup -c",
    "lint": "documentation lint src/kronos-koa.js",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "koa": "^2.4.1",
    "koa-compose": "^4.0.0",
    "koa-is-json": "^1.0.0",
    "on-finished": "^2.3.0",
    "statuses": "^1.3.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "got": "^8.0.1",
    "koa-route": "^3.2.0",
    "markdown-doctest": "^0.9.1",
    "nyc": "^11.4.1",
    "rollup": "^0.55.1",
    "rollup-plugin-multi-entry": "^2.0.2",
    "semantic-release": "^12.2.5",
    "documentation": "^5.3.5",
    "travis-deploy-once": "^4.3.3"
  },
  "engines": {
    "node": ">=8.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/kronos-koa.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/kronos-koa/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/kronos-koa#readme",
  "ava": {
    "files": [
      "build/*-test.js"
    ],
    "presets": [
      "env"
    ],
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "build/*-test.js",
      "src/**/*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./build/coverage"
  },
  "xo": {
    "space": true
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
